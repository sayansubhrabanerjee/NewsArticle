<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_item_title" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            tools:text="Murdochs needed counselling after hacking scandal, says magazine"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#4A5690"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_item_desc" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_item_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toStartOf="@+id/imageView_item_image_href"
            tools:text="NEW YORK: The British phone-hacking scandal brought simmering tensions "
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView_item_image_href" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_item_title" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
    android:contentDescription="@string/feed_image"/>
</android.support.constraint.ConstraintLayout>
