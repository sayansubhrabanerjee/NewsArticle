<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_item_title" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/item_title_margin_end"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/item_title_desc_margin_start"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="@dimen/item_title_desc_margin_top"
            tools:text="Murdochs needed counselling after hacking scandal, says magazine"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/feed_item_blue"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_item_desc" android:layout_marginTop="@dimen/item_title_desc_margin_top"
            app:layout_constraintTop_toBottomOf="@+id/textView_item_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/item_title_desc_margin_start"
            android:layout_marginEnd="@dimen/item_desc_margin_end"
            app:layout_constraintEnd_toStartOf="@+id/imageView_item_image_href"
            tools:text="NEW YORK: The British phone-hacking scandal brought simmering tensions "
            android:layout_marginBottom="@dimen/item_desc_margin_bottom"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="@dimen/item_image_width"
            android:layout_height="@dimen/item_image_height" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView_item_image_href" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/item_image_margin_end"
            android:layout_marginTop="@dimen/item_image_margin_top"
            app:layout_constraintTop_toBottomOf="@+id/textView_item_title"
            android:layout_marginBottom="@dimen/item_image_margin_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/feed_image"/>

</android.support.constraint.ConstraintLayout>
